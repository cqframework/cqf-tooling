            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Josh Reynolds</name>
            <organization>Alphora</organization>
        </developer>
        <developer>
            <name>Chris Schuler</name>
            <organization>Alphora</organization>
        </developer>
        <developer>
            <name>Jonathan Percival</name>
            <organization>Alphora</organization>
